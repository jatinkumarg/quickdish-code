<div id="modal" class="toast align-items-center position-fixed top-0 end-0" style="z-index: 5" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
      No results found!
    </div>
    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>

<script>
  function showToast(msg) {
    const toast = new bootstrap.Toast(document.getElementById('modal'));
    const toastBody = document.getElementById('modal').querySelector('.toast-body');
    toastBody.innerHTML = msg;
    toast.show();

    // hide after 3 secs
    setTimeout(function() {
      toast.hide();
    }, 3000);
  }
</script>